<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tablero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="40dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <LinearLayout
            android:id="@+id/linea0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tablero">

            <ImageView
                android:id="@+id/x1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow" />

            <ImageView
                android:id="@+id/x2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow" />

            <ImageView
                android:id="@+id/x3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow" />

            <ImageView
                android:id="@+id/x4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow" />

            <ImageView
                android:id="@+id/x5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow" />

            <ImageView
                android:id="@+id/x6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow" />

            <ImageView
                android:id="@+id/x7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linea0">

            <ImageView
                android:id="@+id/a1"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/a2"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/a3"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/a4"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/a5"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/a6"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/a7"
                style="@style/boxes" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linea1">

            <ImageView
                android:id="@+id/b1"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/b2"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/b3"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/b4"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/b5"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/b6"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/b7"
                style="@style/boxes" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linea2">

            <ImageView
                android:id="@+id/c1"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/c2"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/c3"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/c4"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/c5"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/c6"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/c7"
                style="@style/boxes" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linea3">

            <ImageView
                android:id="@+id/d1"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/d2"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/d3"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/d4"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/d5"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/d6"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/d7"
                style="@style/boxes" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linea4">

            <ImageView
                android:id="@+id/e1"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/e2"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/e3"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/e4"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/e5"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/e6"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/e7"
                style="@style/boxes" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linea6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linea5">

            <ImageView
                android:id="@+id/f1"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/f2"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/f3"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/f4"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/f5"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/f6"
                style="@style/boxes" />

            <ImageView
                android:id="@+id/f7"
                style="@style/boxes" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/turno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TURNO"
        android:background="@color/red"
        android:textColor="@color/white"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tablero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/contadorPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:background="@color/red"
        android:textColor="@color/white"
        android:layout_marginVertical="40dp"
        app:layout_constraintTop_toBottomOf="@+id/turno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/contadorPlayer2"/>

    <Button
        android:id="@+id/contadorPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:background="@color/yellow"
        android:textColor="@color/white"
        android:layout_marginVertical="40dp"
        app:layout_constraintTop_toBottomOf="@+id/turno"
        app:layout_constraintStart_toEndOf="@+id/contadorPlayer1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnRestart"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="REINICIAR PARTIDA"
        android:background="@color/teal_700"
        android:textColor="@color/white"
        android:layout_marginVertical="40dp"
        app:layout_constraintTop_toBottomOf="@+id/contadorPlayer1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnClearScore"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btnClearScore"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="REINICIAR PUNTUACIONES"
        android:background="@color/teal_700"
        android:textColor="@color/white"
        android:layout_marginVertical="40dp"
        app:layout_constraintTop_toBottomOf="@+id/contadorPlayer1"
        app:layout_constraintStart_toEndOf="@+id/btnRestart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>